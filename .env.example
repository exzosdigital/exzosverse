# ExzosVerse Environment Variables
# Baseado na configuração do LobeChat Server Database

# Modo Servidor (obrigatório)
NEXT_PUBLIC_SERVICE_MODE=server

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/exzosverse"
DATABASE_DRIVER=node # ou 'neon' para Serverless

# Segurança
KEY_VAULTS_SECRET="" # gerar com: openssl rand -base64 32

# Auth - Clerk (recomendado para multi-tenant)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""
CLERK_WEBHOOK_SECRET=""

# Auth - NextAuth (alternativa self-hosted)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="" # gerar com: openssl rand -base64 32

# S3 Storage
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_ENDPOINT=""
S3_BUCKET="exzosverse"
S3_REGION="auto"

# AI Models
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
GOOGLE_GENERATIVE_AI_API_KEY=""

# Multi-tenant
DEFAULT_TENANT="exzos"
ENABLE_MULTI_TENANT=true

# Redis para cache/sessões
REDIS_URL="redis://localhost:6379"